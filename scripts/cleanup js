const fs = require('fs');
const path = require('path');

const jobsFile = path.join(__dirname, '../data/jobs.json');

function cleanupExpiredJobs() {
  try {
    console.log('üßπ Checking for expired jobs...');
    
    if (!fs.existsSync(jobsFile)) {
      console.log('No jobs file found for cleanup');
      return;
    }
    
    const data = fs.readFileSync(jobsFile, 'utf8');
    const jobs = JSON.parse(data);
    
    const now = new Date();
    const activeJobs = jobs.filter(job => {
      try {
        return new Date(job.expires) > now;
      } catch (e) {
        return true; // Keep job if date is invalid
      }
    });
    
    const expiredCount = jobs.length - activeJobs.length;
    
    if (expiredCount > 0) {
      fs.writeFileSync(jobsFile, JSON.stringify(activeJobs, null, 2));
      console.log(`‚úÖ Removed ${expiredCount} expired jobs`);
      console.log(`üìä Active jobs remaining: ${activeJobs.length}`);
    } else {
      console.log('‚úÖ No expired jobs found');
    }
    
  } catch (error) {
    console.log('‚ùå Cleanup error:', error.message);
  }
}

cleanupExpiredJobs();
